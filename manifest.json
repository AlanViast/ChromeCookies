{
  "manifest_version": 2,

  "name": "My Cookie List",
  "description": "Show All Cookies",
  "version": "1.0",
  "icons": {
    "16": "images/logo.jpg",
    "48": "images/logo.jpg",
    "128": "images/logo.jpg"
  },
  "browser_action": {
    "default_icon": "images/logo.jpg",
    "default_popup": "html/popup.html",
    "default_title": "click me show cookies!"
  },
  "content_scripts": [
     {
       "matches": ["*://*/*"],
       "js": ["js/jquery.js", "js/main.js"]
     }
   ],
  "permissions": [
    "cookies",
    "tabs",
    "*://*/"
  ]
}